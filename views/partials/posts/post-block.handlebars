<div class="row card">
    <div class="col-md-3">
        <p>{{this.dataValues.category}}</p>
    </div>
    <div class="col-md-6">
        <h2 class="mypost-header">{{this.dataValues.header}}</h2>
        <p class="mypost-body">{{this.dataValues.body}}</p>
        {{#if this.dataValues.link}}
        <a href={{this.dataValues.link}}>{{this.dataValues.link}}</a>
        {{/if}}
        <p>Posted By: {{this.User.dataValues.email}}</p>
    </div>
    <button data-postid="{{this.dataValues.id}}" class="like">Like</button>
</div>